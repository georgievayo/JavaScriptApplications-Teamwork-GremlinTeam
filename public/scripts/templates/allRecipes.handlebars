<div>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
		{{#each this}}
		{{#if @first}}
      <li data-target="#myCarousel" data-slide-to={{this.id}} class="active"></li>
	  {{/if}}
	  {{#unless @first}}
      <li data-target="#myCarousel" data-slide-to={{this.id}}></li>
	  {{/unless}}
	  {{/each}}
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
{{#each this}}
{{#if @first}}
<div class="item active">
	{{/if}}
	{{#unless @first}}
<div class="item">
	{{/unless}}
		<div class="recipe media col-xs-8 well ">
			<div class="media-top ">
				<img class="d-flex align-self-center mr-3 recipe-image img-circle img-responsive " src="{{this.img}} ">
			</div>
			<div class="media-body ">
				<h3>
					<a href="#/recipes/{{this.id}}">{{this.name}}</a>
					<small>
						<span class="label label-success ">
							new
						</span>
					</small>
				</h3>                
				<div>
					<p>
						<span class="glyphicon glyphicon-time ">
						</span>	
						{{this.preparationTime}} min.
					</p>
					<h4 class="what-do-we-need">
						<small>
							<strong>What do you need?</strong>
						</small>
					</h4>					
					<p class="well well-sm ingredients">
						{{#each this.ingredients}}
						{{#if @last}}
						 {{this.ingredient}}
						 {{/if}}
						 {{#unless @last}}
						 {{this.ingredient}},
						 {{/unless}}
						 {{/each}}
					</p>
				</div>
			</div>
		</div>
</div>
	{{/each}}
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
