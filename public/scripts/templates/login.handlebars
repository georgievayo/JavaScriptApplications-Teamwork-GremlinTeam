<div class="row login" style="margin-top:12%">
	<div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		<fieldset>
			<h2>Please Log In</h2>
			<hr class="colorgraph">
			<div class="input-group">
				<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
				<input type="text" name="username" id="tb-username" class="form-control input-lg" placeholder="Username">
			</div>
			<div class="input-group">
				<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
				<input type="password" name="password" id="tb-pass" class="form-control input-lg" placeholder="Password">
			</div>
			<span class="button-checkbox">
                    <input type="checkbox" name="remember_me" id="remember_me" checked="checked" data-color="info"> Remember Me
				</span>
			<hr class="colorgraph">
			<div class="row">
				<div class="col-xs-6 col-sm-6 col-md-6">
					<input type="submit" class="btn btn-lg btn-success btn-block" id="btn-login" value="Log In">
				</div>
				<div class="col-xs-6 col-sm-6 col-md-6">
					<a href="#/users/register" class="btn btn-lg btn-primary btn-block">Register</a>
				</div>
			</div>
		</fieldset>
	</div>
</div>